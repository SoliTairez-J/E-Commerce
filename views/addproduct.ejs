<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include ("layout") %> 
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-4">
                <h2 align="center">เพิ่มสินค้า</h2>
                <% if(locals.errors) { %>
                    <ul class="alert alert-danger" role="alert">
                        <% Object.values(errors).forEach(function(error){ %>
                            <li class="mx-3"><%= error.msg %> </li>
                        <% }) %>  
                    </ul>
                <% } %> 
                <form action="/products/add" method="post">
                    <div class="form-group">
                        <label for="">ชื่อสินค้า</label>
                        <input type="text" name="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">รายละเอียด</label>
                        <textarea name="description" id="" cols="80" rows="4" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">ราคา</label>
                        <input type="number" name="price" class="form-control" min=1>
                    </div>
                    <div class="form-group">
                        <label for="">หมวดหมู่</label>
                        <select name="category" class="form-control">
                            <% categories.forEach(function(category){ %>
                                <option value="<%= category.name %>"><%= category.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">ภาพสินค้า</label>
                        <input type="url" name="img" class="form-control">
                    </div>
                    <input type="submit" value="บันทึกข้อมูล" class="btn btn-success my-1">
                </form>
            </div>
        </div>
    </div>
</body>
</html>